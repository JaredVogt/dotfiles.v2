# Ghostty configuration for transparent background

# Set background opacity (0 is fully transparent, 1 is fully opaque)
background-opacity = 0.8

# Enable background blur (macOS only)
background-blur-radius = 20

# Set a theme (optional, but can enhance the transparent effect)
theme = dark

# Ensure window decorations are disabled for a cleaner look
window-decoration = false

# Set a font and size (optional, adjust as needed)
font-family = JetBrains Mono
font-size = 14

# Enable clipboard integration
clipboard-read = allow
clipboard-write = allow

# Optional: Set a subtle background color
background = 282c34

